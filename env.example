# ChessMentor-AI Environment Configuration
# Copy this file to .env and adjust the values for your system

# ===== STOCKFISH CONFIGURATION =====
# Path to Stockfish engine
STOCKFISH_PATH=/opt/homebrew/bin/stockfish
# Alternative paths:
# STOCKFISH_PATH=./stockfish/stockfish
# STOCKFISH_PATH=/usr/local/bin/stockfish

# ===== LLM MODEL CONFIGURATION =====
# Path to your local LLM model
LLM_MODEL_PATH=models/mistral-7b-instruct-v0.2.Q4_K_M.gguf

# LLM performance settings
LLM_THREADS=4
LLM_CONTEXT_SIZE=512
LLM_BATCH_SIZE=8

# ===== APPLICATION SETTINGS =====
# Development mode (True/False)
DEBUG=True

# Streamlit configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Flask API settings (if using Flask backend)
FLASK_ENV=development
FLASK_DEBUG=True

# ===== GAME ANALYSIS SETTINGS =====
# Stockfish analysis depth
STOCKFISH_DEPTH=15

# Move classification thresholds (in centipawns)
BLUNDER_THRESHOLD=200
MISTAKE_THRESHOLD=100
INACCURACY_THRESHOLD=50

# ===== FILE PATHS =====
# Directory for saved games
GAMES_DIR=games

# Directory for analysis outputs
ANALYSIS_DIR=analysis

# ===== OPTIONAL: CLOUD DEPLOYMENT =====
# AWS/Cloud settings (if deploying)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1

# ===== OPTIONAL: EXTERNAL APIs =====
# If you plan to use external chess APIs
# LICHESS_API_TOKEN=your_token
# CHESS_COM_API_KEY=your_key 